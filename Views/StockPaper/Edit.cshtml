@model WebPrinter.Models.Stock_Paper

@using (Ajax.BeginForm("Edit", "StockPaper", new AjaxOptions { HttpMethod = "POST", OnSuccess = "Paper.editSuccess();" }, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default">
        <div class="panel-body">
            <form>
                <div class="form-group">
                    @Html.LabelFor(m => m.id, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6">
                        @Html.EditorFor(m => m.id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.id, null, new { @class = "help-inline", @style = "color:red" })</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.type_paper, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.EditorFor(m => m.type_paper, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.type_paper, null, new { @class = "help-inline", @style = "color:red" })</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.gsm, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.gsm, new { @class = "form-control" })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.gsm, null, new { @class = "help-inline", @style = "color:red" })</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.width, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.EditorFor(m => m.width, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.width, null, new { @class = "help-inline", @style = "color:red" })</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.length, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.EditorFor(m => m.length, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.length, null, new { @class = "help-inline", @style = "color:red" })</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.sheets_per_pack, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.EditorFor(m => m.sheets_per_pack, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.sheets_per_pack, null, new { @class = "help-inline", @style = "color:red" })</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.price_per_pack, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.EditorFor(m => m.price_per_pack, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.price_per_pack, null, new { @class = "help-inline", @style = "color:red" })</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.price_per_sheet, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.EditorFor(m => m.price_per_sheet, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.price_per_sheet, null, new { @class = "help-inline", @style = "color:red" })</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary" onclick="Paper.editSuccess();">บันทึกข้อมูล</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
<script type="text/javascript" charset="utf-8">
    $.validator.unobtrusive.parse($("form"));
</script>
