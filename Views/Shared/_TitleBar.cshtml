@{
    ViewBag.home_act = "";
    ViewBag.customer_act = "";
    ViewBag.stock_act = "";
    string url = Request.Url.AbsolutePath.ToLower();
    if (url.EndsWith("home"))
    {
        ViewBag.home_act = "active";
    }
    else if (url.EndsWith("managepaper"))
    {
        ViewBag.stock_act = "active";
    }
    else if (url.EndsWith("managefinishing"))
    {
        ViewBag.stock_act = "active";
    }
    else if (url.EndsWith("addcustomer"))
    {
        ViewBag.customer_act = "active";
    }
    else if (url.EndsWith("pricecalculate"))
    {
        ViewBag.pricecalculate = "active";
    }
}
